<h1>Plan#new</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    
    <%= form_for(@plan) do |f| %>
    <%= render 'shared/error_messages' %>
      
      <%= f.hidden_field :user_id, :value => current_user.id %>
    
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :content %>
      <%= f.text_area :content, size: "20x20", class: 'form-control'  %>

      <%= f.label :event_date %>
      <%= f.text_field :event_date, class: 'form-control' %>
      
      <%= f.submit "Planを作成する", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
